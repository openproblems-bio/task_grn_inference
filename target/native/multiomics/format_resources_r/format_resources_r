  exit 1
fi
if [ ! -z "$VIASH_PAR_ATAC_RDS" ] && [ ! -e "$VIASH_PAR_ATAC_RDS" ]; then
  ViashError "Output file '$VIASH_PAR_ATAC_RDS' does not exist."
  exit 1
fi


exit 0
