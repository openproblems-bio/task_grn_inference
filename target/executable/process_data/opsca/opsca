  VIASH_DIRECTORY_MOUNTS+=( "$(ViashDockerAutodetectMountArg "$VIASH_PAR_OP_RNA")" )
  VIASH_PAR_OP_RNA=$(ViashDockerAutodetectMount "$VIASH_PAR_OP_RNA")
  VIASH_CHOWN_VARS+=( "$VIASH_PAR_OP_RNA" )
fi
