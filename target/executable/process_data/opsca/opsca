  VIASH_PAR_OP_PERTURBATION_BULK=$(ViashDockerAutodetectMount "$VIASH_PAR_OP_PERTURBATION_BULK")
  VIASH_CHOWN_VARS+=( "$VIASH_PAR_OP_PERTURBATION_BULK" )
fi
