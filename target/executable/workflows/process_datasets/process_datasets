# check whether required files exist
if [ ! -z "$VIASH_PAR_OP_RNA" ] && [ ! -e "$VIASH_PAR_OP_RNA" ]; then
  ViashError "Output file '$VIASH_PAR_OP_RNA' does not exist."
  exit 1
fi
if [ ! -z "$VIASH_PAR_OP_ATAC" ] && [ ! -e "$VIASH_PAR_OP_ATAC" ]; then
  ViashError "Output file '$VIASH_PAR_OP_ATAC' does not exist."
  exit 1
fi
if [ ! -z "$VIASH_PAR_OP_PERTURBATION_BULK" ] && [ ! -e "$VIASH_PAR_OP_PERTURBATION_BULK" ]; then
  ViashError "Output file '$VIASH_PAR_OP_PERTURBATION_BULK' does not exist."
  exit 1
fi


exit 0
